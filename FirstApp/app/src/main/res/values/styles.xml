<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/rouge</item>
        <item name="colorPrimaryDark">@color/rouge</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimaryDark</item>
        <item name="android:theme">@style/AppTheme</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/TextAppearance.Toolbar</item>
    </style>

    <style name="BottomSheet.Widget.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/black</item>
        <item name="android:theme">@style/AppTheme</item>
    </style>

    <style name="TextAppearance.Toolbar" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

